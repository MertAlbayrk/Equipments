@using Demirbaş.DataModel

@using (EquipmentsEntities data = new EquipmentsEntities())
{
    var notebook = data.TB_Notebooks.Where(p => p.KayitDurum == "Active").Select(p => p.ID).Count();
    var mobile = data.TB_Mobile.Where(p => p.KayitDurumu == "Active").Select(p => p.ID).Count();
    var printers = data.TB_Printers.Where(p => p.KayitDurum == "Active").Select(p => p.ID).Count();
    var monitors = data.TB_Monitors.Where(p => p.KayitDurum == "Active").Select(p => p.ID).Count();


    ViewBag.notebook = (from c in data.TB_Notebooks where c.KayitDurum == "Active" select c).ToList().Take(4);
    ViewBag.Mobile = (from d in data.TB_Mobile where d.KayitDurumu == "Active" select d).ToList().Take(4);
    ViewBag.Monitors = (from e in data.TB_Monitors where e.KayitDurum == "Active" select e).ToList().Take(4);
    ViewBag.Printers = (from f in data.TB_Printers where f.KayitDurum == "Active" select f).ToList().Take(4 );

    <section class="content">
        <!-- Small boxes (Stat box) -->
        <div class="row">
            <div class="col-lg-3 col-xs-6">
                <!-- small box -->
                <div class="small-box bg-aqua">
                    <div class="inner">
                        <h3>@notebook</h3>
                        <p>
                            NOTEBOOK QUANTITY
                        </p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-stats-bars"></i>
                    </div>
                    <a href="#" class="small-box-footer">
                        MORE <i class="fa fa-arrow-circle-right"></i>
                    </a>
                </div>
            </div><!-- ./col -->
            <div class="col-lg-3 col-xs-6">
                <!-- small box -->
                <div class="small-box bg-green">
                    <div class="inner">
                        <h3>@mobile</h3>
                        <p>
                            MOBILE QUANTITY
                        </p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-person-add"></i>
                    </div>
                    <a href="#" class="small-box-footer">
                        MORE<i class="fa fa-arrow-circle-right"></i>
                    </a>
                </div>
            </div><!-- ./col -->
            <div class="col-lg-3 col-xs-6">
                <!-- small box -->
                <div class="small-box bg-yellow">
                    <div class="inner">
                        <h3>@printers</h3>
                        <p>
                            PRINTERS QUANTITY
                        </p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-android-alarm"></i>
                    </div>
                    <a href="#" class="small-box-footer">
                        MORE<i class="fa fa-arrow-circle-right"></i>
                    </a>
                </div>
            </div><!-- ./col -->
            <div class="col-lg-3 col-xs-6">
                <!-- small box -->
                <div class="small-box bg-red">
                    <div class="inner">
                        <h3>@monitors</h3>
                        <p>
                            MONITORS QUANTITY
                        </p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-android-information"></i>
                    </div>
                    <a href="#" class="small-box-footer">
                        MORE<i class="fa fa-arrow-circle-right"></i>
                    </a>
                </div>
            </div><!-- ./col -->
        </div><!-- /.row -->
        <!-- top row -->
        <!-- /.row -->
        <!-- Main row -->
    </section>


    

    <div class="box-body no-padding">
       

        <section class="col-lg-6 connectedSortable">
            <div class="box box-warning">
                <div class="box-header">
                    <div class="box-header">
                        <h3 class="box-title"><i class="fa fa-laptop"></i><strong> NOTEBOOK</strong></h3>

                    </div>
                </div>
                <div class="box-body no-padding">
                    <div id="world-map" style="height: 5px;"></div>
                    <div class="box-body table-responsive no-padding" style="overflow-x:scroll;">
                        <table class="table table-bordered table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>Users</th>
                                    <th>Serial Number</th>
                                    <th>PC Name</th>
                                    <th>Wifi Mac</th>
                                    <th>Eth Mac</th>
                                    <th>Invoice Number</th>
                                    <th>Old User</th>

                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var item in ViewBag.notebook)
                                {
                                    <tr>
                                        <td>@item.Users</td>
                                        <td>@item.SerialNum</td>
                                        <td>@item.PcName</td>
                                        <td>@item.WifiMac</td>
                                        <td>@item.EthMac</td>
                                        <td>@item.InvoiceNumber</td>
                                        <td>@item.OldUser</td>


                                    </tr>
                                }


                            </tbody>
                        </table>
                    </div>
                    <div class="box-footer">

                    </div>
                </div>

            </div>
        </section>

        <section class="col-lg-6 connectedSortable">
            <div class="box box-danger">
                <div class="box-header">
                    <div class="box-header">
                        <h3 class="box-title"><i class="fa fa-battery-full"></i><strong> MOBILE</strong></h3>

                    </div>
                </div>
                <div class="box-body no-padding">
                    <div id="world-map" style="height: 5px;"></div>
                    <div class="box-body table-responsive no-padding" style="overflow-x:scroll;">
                        <table class="table table-bordered table-striped table-hover">
                            <thead>
                                <tr>

                                    <th>Name</th>
                                    <th>Phone</th>
                                    <th>Number</th>
                                    <th>Serial Number</th>
                                    <th>Invoice Number</th>
                                    <th>Old User</th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in ViewBag.Mobile)
                                {
                                    <tr>
                                        <td>@item.Name</td>
                                        <td>@item.Phone</td>
                                        <td>@item.Number</td>
                                        <td>@item.SerialNumber</td>
                                        <td>@item.InvoiceNumber</td>
                                        <td>@item.OldUser</td>


                                    </tr>
                                }



                            </tbody>
                        </table>
                    </div>
                    <div class="box-footer">

                    </div>
                </div>

            </div>
        </section>


        <section class="col-lg-6 connectedSortable">
            <div class="box box-primary">
                <div class="box-header">
                    <div class="box-header">
                        <h3 class="box-title"><i class="fa fa-television"></i><strong>MONITORS</strong></h3>

                    </div>
                </div>
                <div class="box-body no-padding">
                    <div id="world-map" style="height: 5px;"></div>
                    <div class="box-body table-responsive no-padding" style="overflow-x:scroll;">
                        <table class="table table-bordered table-striped table-hover">
                            <thead>
                                <tr>

                                    <th>Brand</th>
                                    <th>Serial Number</th>
                                    <th>Users</th>
                                    <th>Place</th>
                                    <th>Status</th>


                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var item in ViewBag.Monitors)
                                {
                                    <tr>
                                        <td>@item.Brand</td>
                                        <td>@item.SerialNumber</td>
                                        <td>@item.Users</td>
                                        <td>@item.Place</td>
                                        <td>@item.Status</td>

                                    </tr>
                                }


                            </tbody>
                        </table>
                    </div>
                    <div class="box-footer">

                    </div>
                </div>

            </div>
        </section>

        <section class="col-lg-6 connectedSortable">
            <div class="box box-danger">
                <div class="box-header">
                    <div class="box-header">
                        <h3 class="box-title"><i class="glyphicon glyphicon-print"></i><strong>PRINTERS</strong></h3>

                    </div>
                </div>
                <div class="box-body no-padding">
                    <div id="world-map" style="height: 5px;"></div>
                    <div class="box-body table-responsive no-padding" style="overflow-x:scroll;">
                        <table class="table table-bordered table-striped table-hover">
                            <thead>
                                <tr>

                                    <th>Brand</th>
                                    <th>IP</th>
                                    <th>Location</th>
                                    <th>Status</th>
                                    <th>Serial Number</th>
                                    <th>InventoryNumber</th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var item in ViewBag.Printers)
                                {
                                    <tr>
                                        <td>@item.Brand</td>
                                        <td>@item.IP</td>
                                        <td>@item.Location</td>
                                        <td>@item.Status</td>
                                        <td>@item.SerialNumber</td>
                                        <td>@item.InventoryNumber</td>

                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                    <div class="box-footer">

                    </div>
                </div>

            </div>
        </section>


    </div><!-- /.box-body-->




}


