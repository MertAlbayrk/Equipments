@model Demirbaş.ViewModel.MobileModel

@{
    ViewBag.Title = "Mobile";
}
@using (Ajax.BeginForm("Mobile", "Search", FormMethod.Post, new AjaxOptions { OnSuccess = "loadMobile" }))
{
    <div class="box box-primary">
        <div class="box-header">
            <!-- tools box -->
            <div class="pull-right box-tools">
                <button class="btn btn-primary btn-sm pull-right" data-widget='collapse' data-toggle="tooltip" title="Collapse" style="margin-right: 5px;"><i class="fa fa-minus"></i></button>
            </div><!-- /. tools -->

            <i class="glyphicon glyphicon-phone"></i>
            <h3 class="box-title">
                Search Information  
            </h3>
        </div>

        <div class="box-body no-padding">
            <div id="world-map" style="height: 5px;"></div>
            <div class="form-group row">

                <div class="col-xs-2">
                    <label>User Name </label>
                    @Html.TextBoxFor(m => m.Users)
                </div>
                <div class="col-xs-2">
                    <label>Serial Number </label>
                    @Html.TextBoxFor(m => m.SerialNumber)
                </div>
            </div>



        </div><!-- /.box-body-->
        <div class="box-footer">

            <button class="btn btn-primary " type="submit" name="submit"><i class="fa fa-search"></i> Search </button>
        </div>

    </div>
}


<br />
<section>
    <div class="box box-danger">
        <div class="box-header">
            <div class="box-header">
                <h3 class="box-title"><i class="glyphicon glyphicon-phone"></i><strong>Mobile Search İnformation</strong></h3>
                <div style="float:right;">
                    <select id="pageSize" class="btn btn-xs btn-default" title="Total User Number" style="float:right;">
                        <option>15</option>
                        <option>25</option>
                        <option>50</option>
                    </select>
                    <div style="clear: both;"></div>
                </div>
            </div>
        </div>
        <div class="box-body no-padding">
            <div id="world-map" style="height: 5px;"></div>
            <div class="box-body table-responsive no-padding" style="overflow-x:scroll;">


                @Html.Partial("_Mobile", @Model)



            </div>
            <div class="box-footer">

            </div>
        </div>

    </div>
</section>






