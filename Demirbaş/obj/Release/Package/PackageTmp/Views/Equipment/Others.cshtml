
@{
    ViewBag.Title = "Others";
}
<script type="text/javascript">

    function Save() {
        var _data = {
            SerialNumber: $("#txt_SerialNumber").val(),
            Brand: $("#txt_Brand").val(),
            Users: $("#txt_Users").val(),
            Features: $("#txt_Features").val(),
            location: $("#txt_Location").val(),
            Specification: $("#txt_Specification").val(),
            InvoiceNumber: $("#txt_InvoiceNumber").val(),
            PurchaseDate: $("#txt_PurchaseDate").val(),
            OldUser: $("#txt_OldUser").val(),
        };

        $.ajax({
            url: '@Url.Action("OthersAdd", "Equipment")',
            type: 'POST',
            dataType: 'json',
            data: _data,
            success: function (response) {
                if (response.Status == true) {
                    swal({
                        title: "",
                        text: response.Message,
                        type: "success",
                        showCancelButton: false,
                        closeOnConfirm: false,
                        showLoaderOnConfirm: true,
                    },
                     function () {
                         location.reload();
                     });

                }
                else
                    swal('', response.Message, "error");

            },
            error: function (hata, ajaxOptions, thrownError) {
                sweetAlert("Oops...", "Something went wrong!", "error");
            }
        });

        Temizle();
    }
    function Temizle() {
        $("#txt_Users").val('');
        $("#txt_Brand").val('');
        $("#txt_SerialNumber").val('');
        $("#txt_Features").val('');
        $("#txt_Location").val('');
        $("#txt_Specification").val('');
        $("#txt_InvoiceNumber").val('');
        $("#txt_PurchaseDate").val('');
        $("#txt_OldUser").val('');

    }

    function OthersSend(u1,u2,u3,u4,u5,u6,u7,u8,u9,u10) {
        $("#OthersCode").val(u1);
        $("#Users").val(u2);
        $("#Brand").val(u3);
        $("#SerialNumber").val(u4);
        $("#Features").val(u5);
        $("#Location").val(u6);
        $("#Specification").val(u7);
        $("#InvoiceNumber").val(u8);
        $("#PurchaseDate").val(u9);
        $("#OldUser").val(u10);


        $("#others").modal('show');
    }

    function Update() {
        var _data = {
            OthersCode: $("#OthersCode").val(),
            Users: $("#Users").val(),
            Brand: $("#Brand").val(),
            Users: $("#Users").val(),
            SerialNumber: $("#SerialNumber").val(),
            Features: $("#Features").val(),
            Location: $("#Location").val(),
            Specification: $("#Specification").val(),
            PurchaseDate: $("#PurchaseDate").val(),
            InvoiceNumber: $("#InvoiceNumber").val(),
            OldUser: $("#OldUser").val(),
        };

        $.ajax({
            url: '@Url.Action("OthersUpdate", "Equipment")',
            type: 'POST',
            dataType: 'json',
            data: _data,
            success: function (response) {
                if (response.Status == true) {
                    swal({
                        title: "",
                        text: response.Message,
                        type: "success",
                        showCancelButton: false,
                        closeOnConfirm: false,
                        showLoaderOnConfirm: true,
                    },
                     function () {
                         location.reload();
                     });

                }
                else
                    swal('', response.Message, "error");

            },
            error: function (hata, ajaxOptions, thrownError) {
                sweetAlert("Oops...", "Something went wrong!", "error");
            }
        });
    }


    function Delete() {
        var _data = {
            OthersCode: $("#kod4").val()
        };

        $.ajax({
            url: '@Url.Action("OthersDelete", "Equipment")',
            type: 'POST',
            dataType: 'json',
            data: _data,
            success: function (response) {
                if (response.Status == true) {
                    swal({
                        title: "",
                        text: response.Message,
                        type: "success",
                        showCancelButton: false,
                        closeOnConfirm: false,
                        showLoaderOnConfirm: true,
                    },
                     function () {
                         location.reload();
                     });

                }
                else
                    swal('', response.Message, "error");

            },
            error: function (hata, ajaxOptions, thrownError) {
                sweetAlert("Oops...", "Something went wrong!", "error");
            }
        });
    }


    function OthersDelete(u1) {
        $("#kod4").val(u1);

        Delete();
    }


</script>
