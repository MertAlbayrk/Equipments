                                <td>@item.UserCode</td>
                                <td>@item.Users</td>
                                <td>@item.Vendor</td>
                                <td>@item.SerialNum</td>
                                <td>@item.PcName</td>
                                <td>@item.WifiMac</td>
                                <td>@item.EthMac</td>
                                <td>@item.OperationSystem</td>
                                <td>@item.Specification</td>
                                <td>@item.WindowsCdKey</td>
                                <td>@item.SSD</td>
                                <td>@item.SSDSerial</td>
                                <td>@item.PurchaseDate</td>
                                <td>@item.InvoiceNumber</td>
                                <td>@item.OldUser</td>
                                <td>
                                    <button type="button" onclick="NotebooksSend('@item.UserCode','@item.Users','@item.Vendor','@item.SerialNum','@item.PcName','@item.WifiMac','@item.EthMac','@item.OperationSystem','@item.Specification','@item.WindowsCdKey','@item.SSD','@item.SSDSerial','@item.PurchaseDate','@item.InvoiceNumber','@item.OldUser')" class="btn btn-xs btn-primary"><span class="fa fa-edit"></span> </button>
                                    <button type="button" onclick="NotebooksDelete('@item.UserCode')" class="btn btn-xs btn-danger"><span class="fa fa-trash"></span> </button>
                                </td>
                            </tr>

                        }
                    </tbody>
                </table>
            </div>
            <div class="box-footer">

            </div>
        </div>

    </div>
</section>

