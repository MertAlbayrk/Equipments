

@{
    ViewBag.Title = "Printers";
}
<script type="text/javascript">

    function Save() {
        var _data = {
            SerialNumber: $("#txt_SerialNumber").val(),
            Brand: $("#txt_Brand").val(),
            IP: $("#txt_IP").val(),
            BasicFeatures: $("#txt_BasicFeatures").val(),
            NetworkName: $("#txt_NetworkName").val(),
            Location: $("#txt_Location").val(),
            InventoryNumber: $("#txt_InventoryNumber").val(),
            InvoiceContract: $("#txt_InvoiceContract").val(),
            Status: $("#cmb_Status option:selected").val(),
            PurchaseDate: $("#txt_PurchaseDate").val()
        };

        $.ajax({
            url: '@Url.Action("PrintersAdd", "Equipment")',
            type: 'POST',
            dataType: 'json',
            data: _data,
            success: function (response) {
                if (response.Status == true) {
                    swal({
                        title: "",
                        text: response.Message,
                        type: "success",
                        showCancelButton: false,
                        closeOnConfirm: false,
                        showLoaderOnConfirm: true,
                    },
                     function () {
                         location.reload();
                     });

                }
                else
                    swal('', response.Message, "error");

            },
            error: function (hata, ajaxOptions, thrownError) {
                sweetAlert("Oops...", "Something went wrong!", "error");
            }
        });

        Temizle();
    }
    function Temizle() {
        $("#txt_SerialNumber").val('');
        $("#txt_Brand").val('');
        $("#txt_IP").val('');
        $("#txt_BasicFeatures").val('');
        $("#txt_Location").val('');
        $("#txt_NetworkName").val('');
        $("#txt_InventoryNumber").val('');
        $("#txt_InvoiceContract").val('');
        $("#cmb_Status option:selected").removoAttr('selected');
        $("#txt_PurchaseDate").val('');


    }

    function PrinterSend(u1, u2, u3, u4, u5, u6, u7, u8, u9, u10, u11) {
        $("#PrintersCode").val(u1);
        $("#SerialNumber").val(u2);
        $("#Brand").val(u3);
        $("#IP").val(u4);
        $("#BasicFeatures").val(u5);
        $("#NetworkName").val(u6);
        $("#Location").val(u7);
        $("#InventoryNumber").val(u8);
        $("#InvoiceContract").val(u9);
        $("#Status").val(u10);
        $("#PurchaseDate").val(u11);



        $("#printers").modal('show');
    }


    function Update() {
        var _data = {
            PrintersCode: $("#PrintersCode").val(),
            Brand: $("#Brand").val(),
            SerialNumber: $("#SerialNumber").val(),
            IP: $("#IP").val(),
            BasicFeatures: $("#BasicFeatures").val(),
            NetworkName: $("#NetworkName").val(),
            Location: $("#Location").val(),
            PurchaseDate: $("#PurchaseDate").val(),
            InventoryNumber: $("#InventoryNumber").val(),
            Status: $("#Status").val(),
            InvoiceContract: $("#InvoiceContract").val()

        };

        $.ajax({
            url: '@Url.Action("PrintersUpdate", "Equipment")',
            type: 'POST',
            dataType: 'json',
            data: _data,
            success: function (response) {
                if (response.Status == true) {
                    swal({
                        title: "",
                        text: response.Message,
                        type: "success",
                        showCancelButton: false,
                        closeOnConfirm: false,
                        showLoaderOnConfirm: true,
                    },
                     function () {
                         location.reload();
                     });

                }
                else
                    swal('', response.Message, "error");

            },
            error: function (hata, ajaxOptions, thrownError) {
                sweetAlert("Oops...", "Something went wrong!", "error");
            }
        });
    }

    function Delete() {
        var _data = {
            PrintersCode: $("#kod5").val()
        };

        $.ajax({
            url: '@Url.Action("PrintersDelete", "Equipment")',
            type: 'POST',
            dataType: 'json',
            data: _data,
            success: function (response) {
                if (response.Status == true) {
                    swal({
                        title: "",
                        text: response.Message,
                        type: "success",
                        showCancelButton: false,
                        closeOnConfirm: false,
                        showLoaderOnConfirm: true,
                    },
                     function () {
                         location.reload();
                     });

                }
                else
                    swal('', response.Message, "error");

            },
            error: function (hata, ajaxOptions, thrownError) {
                sweetAlert("Oops...", "Something went wrong!", "error");
            }
        });
    }

    function PrinterDelete(u2) {
        $("#kod5").val(u2);

        Delete();
    }

</script>
