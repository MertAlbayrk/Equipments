                            <th>Old User</th>
                            <th>PurchaseDate</th>
                            <th>Update/Delete</th>


                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in ViewBag.Mobile)
                        {
                        <tr>
                            <td>@item.UserCode</td>
                            <td>@item.Demirbas</td>
                            <td>@item.MAC</td>
                            <td>@item.Name</td>
                            <td>@item.Phone</td>
                            <td>@item.Number</td>
                            <td>@item.SerialNumber</td>
                            <td>@item.IMEI</td>
                            <td>@item.InvoiceNumber</td>
                            <td>@item.OldUser</td>
                            <td>@item.PurchaseDate</td>
                            <td>
                                <button type="button" onclick="MobileSend('@item.UserCode','@item.Demirbas','@item.MAC','@item.Name','@item.Phone','@item.Number','@item.SerialNumber','@item.IMEI','@item.InvoiceNumber','@item.OldUser','@item.PurchaseDate')" class="btn btn-xs btn-primary"><span class="fa fa-edit"></span> </button>
                                <button type="button" onclick="MobileDelete('@item.UserCode')" class="btn btn-xs btn-danger"><span class="fa fa-trash"></span> </button>
                            </td>
                        </tr>

                        }
                    </tbody>
                </table>
            </div>
            <div class="box-footer">

            </div>
        </div>

    </div>
</section>


