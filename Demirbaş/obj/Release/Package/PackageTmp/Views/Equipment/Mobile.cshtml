
@{
    ViewBag.Title = "Mobile";
}
<script type="text/javascript">

    function Save() {
        var _data = {
            Demirbas: $("#txt_Demirbas").val(),
            Name: $("#txt_Name").val(),
            Phone: $("#txt_Phone").val(),
            Number: $("#txt_Number").val(),
            SerialNumber: $("#txt_SerialNumber").val(),
            IMEI: $("#txt_IMEI").val(),
            MAC: $("#txt_Mac").val(),
            PurchaseDate: $("#txt_PurchaseDate").val(),
            InvoiceNumber: $("#txt_InvoiceNumber").val(),
            OldUser: $("#txt_OldUser").val()


        };

        $.ajax({
            url: '@Url.Action("MobileAdd", "Equipment")',
            type: 'POST',
            dataType: 'json',
            data: _data,
            success: function (response) {
                if (response.Status == true) {
                    swal({
                        title: "",
                        text: response.Message,
                        type: "success",
                        showCancelButton: false,
                        closeOnConfirm: false,
                        showLoaderOnConfirm: true,
                    },
                     function () {
                         location.reload();
                     });

                }
                else
                    swal('', response.Message, "error");

            },
            error: function (hata, ajaxOptions, thrownError) {
                sweetAlert("Oops...", "Something went wrong!", "error");
            }
        });

        Temizle();
    }


    function Temizle() {
        $("#txt_Demirbas").val('');
        $("#txt_Name").val('');
        $("#txt_Phone").val('');
        $("#txt_Number").val('');
        $("#txt_SerialNumber").val('');
        $("#txt_IMEI").val('');
        $("#txt_Mac").val('');
        $("#txt_PurchaseDate").val('');
        $("#txt_InvoiceNumber").val('');
        $("#txt_OldUser").val('');

    }

    function MobileSend(u1,u2,u3,u4,u5,u6,u7,u8,u9,u10,u11) {
        $("#MobileCode").val(u1);
        $("#Demirbas").val(u2);
        $("#Name").val(u3);
        $("#Phone").val(u4);
        $("#Number").val(u5);
        $("#SerialNumber").val(u6);
        $("#IMEI").val(u7);
        $("#MAC").val(u8);
        $("#InvoiceNumber").val(u9);
        $("#OldUser").val(u10);
        $("#PurchaseDate").val(u11);

        $("#mobile").modal('show');
    }



    function Update() {
        var _data = {
            mobileCode: $("#MobileCode").val(),
            Demirbas: $("#Demirbas").val(),
            Name: $("#Name").val(),
            Phone: $("#Phone").val(),
            Number: $("#Number").val(),
            SerialNumber: $("#SerialNumber").val(),
            IMEI: $("#IMEI").val(),
            MAC: $("#MAC").val(),
            PurchaseDate: $("#PurchaseDate").val(),
            InvoiceNumber: $("#InvoiceNumber").val(),
            OldUser: $("#OldUser").val(),
        };

        $.ajax({
            url: '@Url.Action("mobileUpdate", "Equipment")',
            type: 'POST',
            dataType: 'json',
            data: _data,
            success: function (response) {
                if (response.Status == true) {
                    swal({
                        title: "",
                        text: response.Message,
                        type: "success",
                        showCancelButton: false,
                        closeOnConfirm: false,
                        showLoaderOnConfirm: true,
                    },
                     function () {
                         location.reload();
                     });

                }
                else
                    swal('', response.Message, "error");

            },
            error: function (hata, ajaxOptions, thrownError) {
                sweetAlert("Oops...", "Something went wrong!", "error");
            }
        });
    }


    function Delete() {
        var _data = {
            MobileCode: $("#kod1").val()
        };

        $.ajax({
            url: '@Url.Action("MobileDelete", "Equipment")',
            type: 'POST',
            dataType: 'json',
            data: _data,
            success: function (response) {
                if (response.Status == true) {
                    swal({
                        title: "",
                        text: response.Message,
                        type: "success",
                        showCancelButton: false,
                        closeOnConfirm: false,
                        showLoaderOnConfirm: true,
                    },
                     function () {
                         location.reload();
                     });

                }
                else
                    swal('', response.Message, "error");

            },
            error: function (hata, ajaxOptions, thrownError) {
                sweetAlert("Oops...", "Something went wrong!", "error");
            }
        });
    }


    function MobileDelete(s1) {
        $("#kod1").val(s1);

        Delete();
    }

</script>

