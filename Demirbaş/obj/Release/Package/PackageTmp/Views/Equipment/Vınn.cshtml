                                    <button type="button" onclick="VinnDelete('@item.UserCode')" class="btn btn-xs btn-danger"><span class="fa fa-trash"></span> </button>
                                </td>
                            </tr>

                        }
                    </tbody>
                </table>
            </div>
            <div class="box-footer">

            </div>
        </div>

    </div>
</section>

