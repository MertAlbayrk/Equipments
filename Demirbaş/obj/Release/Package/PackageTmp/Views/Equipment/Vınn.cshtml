<script type="text/javascript">

    function Save() {
        var _data = {
            Users: $("#txt_Users").val(),
            Operator: $("#txt_Operator").val(),
            SerialNumber: $("#txt_SerialNumber").val(),
            IMEI: $("#txt_IMEI").val(),
            DeviceName: $("#txt_DeviceName").val(),
            Special: $("#txt_Special").val(),
            SımCardNo: $("#txt_SımCardNo").val(),
            PIN1: $("#txt_PIN1").val(),
            PIN2: $("#txt_PIN2").val(),
            PUK1: $("#txt_PUK1").val(),
            PUK2: $("#txt_PUK2").val(),
            PurchaseDate: $("#txt_PurchaseDate").val(),
            Status: $("#txt_Status").val(),
            OldUser: $("#txt_OldUser").val()
        };

        $.ajax({
            url: '@Url.Action("VınnAdd", "Equipment")',
            type: 'POST',
            dataType: 'json',
            data: _data,
            success: function (response) {
                if (response.Status == true) {
                    swal({
                        title: "",
                        text: response.Message,
                        type: "success",
                        showCancelButton: false,
                        closeOnConfirm: false,
                        showLoaderOnConfirm: true,
                    },
                     function () {
                         location.reload();
                     });

                }
                else
                    swal('', response.Message, "error");

            },
            error: function (hata, ajaxOptions, thrownError) {
                sweetAlert("Oops...", "Something went wrong!", "error");
            }
        });

        Temizle();
    }
    function Temizle() {
        $("#txt_SerialNumber").val('');
        $("#txt_Users").val('');
        $("#txt_Operator").val('');
        $("#txt_IMEI").val('');
        $("#txt_DeviceName").val('');
        $("#txt_Special").val('');
        $("#txt_PIN1").val('');
        $("#txt_PIN2").val('');
        $("#txt_PUK1").val('');
        $("#txt_PUK2").val('');
        $("#txt_SımCardNo").val('');
        $("#txt_PurchaseDate").val('');
        $("#txt_Status").val('');
        $("#txt_OldUser").val('');

    }

    function VinnSend(u1, u2, u3, u4, u5, u6, u7, u8, u9, u10, u11, u12, u13, u14, u15) {
        $("#VınnCode").val(u1);
        $("#Users").val(u2);
        $("#Operator").val(u3);
        $("#SerialNumber").val(u4);
        $("#IMEI").val(u5);
        $("#DeviceName").val(u6);
        $("#SımCardNo").val(u7);
        $("#PIN1").val(u8);
        $("#PIN2").val(u9);
        $("#PUK1").val(u10);
        $("#PUK2").val(u11);
        $("#Special").val(u12);
        $("#Status").val(u13);
        $("#PurchaseDate").val(u15);
        $("#OldUser").val(u14);

        $("#Vınn").modal('show');
    }

