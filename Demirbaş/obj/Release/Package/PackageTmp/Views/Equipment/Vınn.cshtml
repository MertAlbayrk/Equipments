                                <td>@item.SımCardNo</td>
                                <td>@item.PIN1</td>
                                <td>@item.PIN2</td>
                                <td>@item.PUK1</td>
                                <td>@item.PUK2</td>
                                <td>@item.Special</td>
                                <td>@item.Status</td>      
                                <td>@item.OldUser</td>
                                <td>@item.PurchaseDate</td>
