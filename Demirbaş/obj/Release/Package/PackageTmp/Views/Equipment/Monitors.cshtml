                            <th>PurchaseDate</th>
                            <th>InvoiceNumber</th>
                            <th>OldUser</th>
                            <th>Update/Delete</th>



                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in ViewBag.Monitors)
                        {
                        <tr>
                            <td>@item.UserCode</td>
                            <td>@item.Demirbas</td>
                            <td>@item.Brand</td>
                            <td>@item.Users</td>
                            <td>@item.SerialNumber</td>
                            <td>@item.BrandFeatures</td>
                            <td>@item.Place</td>
                            <td>@item.Status</td>
                            <td>@item.PurchaseDate</td>
                            <td>@item.InvoiceNumber</td>
                            <td>@item.OldUser</td>
                            <td>
                                <button type="button" onclick="MonitorsSend('@item.UserCode','@item.Demirbas','@item.Brand','@item.Users','@item.SerialNumber','@item.BrandFeatures','@item.Place','@item.Status','@item.PurchaseDate','@item.InvoiceNumber','@item.OldUser')" class="btn btn-xs btn-primary"><span class="fa fa-edit"></span> </button>
                                <button type="button" onclick="MonitorsDelete('@item.UserCode')" class="btn btn-xs btn-danger"><span class="fa fa-trash"></span> </button>
                            </td>
                        </tr>

                        }
                    </tbody>
                </table>
            </div>
            <div class="box-footer">

            </div>
        </div>

    </div>
</section>


