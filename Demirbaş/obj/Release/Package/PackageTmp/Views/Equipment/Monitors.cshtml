
@{
    ViewBag.Title = "Monitors";
}
<script type="text/javascript">

    function Save() {
        var _data = {
            Demirbas: $("#txt_Demirbas").val(),
            Brand: $("#txt_Brand").val(),
            Users: $("#txt_Users").val(),
            SerialNumber: $("#txt_SerialNumber").val(),
            BrandFeatures: $("#txt_BrandFeatures").val(),
            Place: $("#txt_Place").val(),
            Status: $("#cmb_Status option:selected").val(),
            PurchaseDate: $("#txt_PurchaseDate").val(),
            InvoiceNumber: $("#txtInvoiceNum").val(),
            OldUser: $("#txtoldUser").val()
        };

        $.ajax({
            url: '@Url.Action("MonitorsAdd", "Equipment")',
            type: 'POST',
            dataType: 'json',
            data: _data,
            success: function (response) {
                if (response.Status == true) {
                    swal({
                        title: "",
                        text: response.Message,
                        type: "success",
                        showCancelButton: false,
                        closeOnConfirm: false,
                        showLoaderOnConfirm: true,
                    },
                     function () {
                         location.reload();
                     });

                }
                else
                    swal('', response.Message, "error");

            },
            error: function (hata, ajaxOptions, thrownError) {
                sweetAlert("Oops...", "Something went wrong!", "error");
            }
        });

        Temizle();
    }
    function Temizle() {
        $("#txt_Demirbas").val('');
        $("#txt_Brand").val('');
        $("#txt_Users").val('');
        $("#txt_SerialNumber").val('');
        $("#txt_BrandFeatures").val('');
        $("#txt_Place").val('');
        $("#txtInvoiceNum").val('');
        $("#txtoldUser").val('');
        $("#cmb_Status option:selected").removoAttr('selected');
        $("#txt_PurchaseDate").val('');


    }

    function MonitorsSend(u1, u2, u3, u4, u5, u6, u7, u8, u9, u10,u11) {
        $("#MonitorsCode").val(u1);
        $("#Demirbas").val(u2);
        $("#Brand").val(u3);
        $("#Users").val(u4);
        $("#SerialNumber").val(u5);
        $("#BrandFeatures").val(u6);
        $("#Place").val(u7);
        $("#Status").val(u8);
        $("#PurchaseDate").val(u9);
        $("#InvoiceNumber").val(u10);
        $("#OldUser").val(u11);

        $("#monitors").modal('show');
    }

    function Update() {
        var _data = {
            MonitorsCode: $("#MonitorsCode").val(),
            Demirbas: $("#Demirbas").val(),
            Brand: $("#Brand").val(),
            Users: $("#Users").val(),
            SerialNumber: $("#SerialNumber").val(),
            BrandFeatures: $("#BrandFeatures").val(),
            Place: $("#Place").val(),
            Status: $("#Status").val(),
            PurchaseDate: $("#PurchaseDate").val(),
            InvoiceNumber: $("#InvoiceNumber").val(),
            OldUser: $("#OldUser").val()
        };

        $.ajax({
            url: '@Url.Action("MonitorsUpdate", "Equipment")',
            type: 'POST',
            dataType: 'json',
            data: _data,
            success: function (response) {
                if (response.Status == true) {
                    swal({
                        title: "",
                        text: response.Message,
                        type: "success",
                        showCancelButton: false,
                        closeOnConfirm: false,
                        showLoaderOnConfirm: true,
                    },
                     function () {
                         location.reload();
                     });

                }
                else
                    swal('', response.Message, "error");

            },
            error: function (hata, ajaxOptions, thrownError) {
                sweetAlert("Oops...", "Something went wrong!", "error");
            }
        });
    }

    function Delete() {
        var _data = {
            MonitorsCode: $("#kod2").val()
        };

        $.ajax({
            url: '@Url.Action("MonitorsDelete", "Equipment")',
            type: 'POST',
            dataType: 'json',
            data: _data,
            success: function (response) {
                if (response.Status == true) {
                    swal({
                        title: "",
                        text: response.Message,
                        type: "success",
                        showCancelButton: false,
                        closeOnConfirm: false,
                        showLoaderOnConfirm: true,
                    },
                     function () {
                         location.reload();
                     });

                }
                else
                    swal('', response.Message, "error");

            },
            error: function (hata, ajaxOptions, thrownError) {
                sweetAlert("Oops...", "Something went wrong!", "error");
            }
        });
    }


    function MonitorsDelete(s1) {
        $("#kod2").val(s1);

        Delete();
    }

</script>

