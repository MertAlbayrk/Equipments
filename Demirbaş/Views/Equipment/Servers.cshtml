
@{
    ViewBag.Title = "Servers";
}
<script type="text/javascript">

    function Save() {
        var _data = {
            ServerName: $("#txt_Name").val(),
            SerialNumber: $("#txt_SerialNumber").val(),
            location: $("#cmb_Location option:selected").text()
        };

        $.ajax({
            url: '@Url.Action("ServersAdd", "Equipment")',
            type: 'POST',
            dataType: 'json',
            data: _data,
            success: function (response) {
                if (response.Status == true) {
                    swal({
                        title: "",
                        text: response.Message,
                        type: "success",
                        showCancelButton: false,
                        closeOnConfirm: false,
                        showLoaderOnConfirm: true,
                    },
                     function () {
                         location.reload();
                     });

                }
                else
                    swal('', response.Message, "error");

            },
            error: function (hata, ajaxOptions, thrownError) {
                sweetAlert("Oops...", "Something went wrong!", "error");
            }
        });
    }
    function Temizle() {
        $("#txt_SerialNumber").val('');
        $("#txt_Name").val('');
        $("#cmb_Location option:selected").removoAttr('selected');

    }


    function ServersSend(u1,u2,u3,u4) {
        $("#ServerCode").val(u1);
        $("#ServerName").val(u2);
        $("#SerialNumber").val(u3);
        $("#Location").val(u4);

        $("#modalSube").modal('show');


    }
 

</script>
<section>
    <div class="box box-primary"></div>
        <div class="box-header">
            <!-- tools box -->
            <div class="pull-right box-tools">
                <button class="btn btn-primary btn-sm pull-right" data-widget='collapse' data-toggle="tooltip" title="Collapse" style="margin-right: 5px;"><i class="fa fa-minus"></i></button>
            </div><!-- /. tools -->
            <i class="fa fa-user"></i>
            <h3 class="box-title">
                Servers Information
            </h3>
        </div>
        <div class="box-body no-padding">
            <div id="world-map" style="height: 5px;"></div>

            <div class="form-group row">
                <div class="col-xs-3">
                    <label>Server Name</label>
                    <input class="form-control" id="txt_Name" type="text">
                </div>
                <div class="col-xs-3">
                    <label>Serial Number</label>
                    <input class="form-control" id="txt_SerialNumber" type="text">
                </div>
                <div class="col-xs-3">
                    <label>Location</label>
                    <select id="cmb_Location" class="form-control">
                        <option value="Selection">Selection</option>
                        <option value="Superonline Datacenter">Superonline Datacenter</option>
                        <option value="PG Office">PG Office</option>
                

                    </select>
                </div>
              
        </div><!-- /.box-body-->
        <div class="box-footer">
            <button class="btn btn-info" onclick="Save()"><i class="fa fa-save"></i> Bilgileri Kaydet</button>
            <button class="btn btn-warning" onclick="Temizle()"><i class="fa fa-repeat"></i> Temizle</button>
        </div>
    </div>


</section>
<br />
<section>
    <div class="box box-danger">
        <div class="box-header">
            <div class="box-header">
                <h3 class="box-title"><i class="fa fa-wheelchair"></i><strong>Servers Register İnformation</strong></h3>
                <div style="float:right;">
                    <select id="pageSize" class="btn btn-xs btn-default" title="Total User Number" style="float:right;">
                        <option>15</option>
                        <option>25</option>
                        <option>50</option>
                    </select>
                    <div style="clear: both;"></div>
                </div>
            </div>
        </div>
        <div class="box-body no-padding">
            <div id="world-map" style="height: 5px;"></div>
            <div class="box-body table-responsive no-padding" style="overflow-x:scroll;">
                <table class="table table-bordered table-striped table-hover">
                    <thead>
                        <tr>
                            <th>ServerCode</th>
                            <th>Server Name</th>
                            <th>Serial Number</th>
                            <th>Location</th>
                            <th>Update</th>
                                                      
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in ViewBag.Servers)
                        {
                            <tr>
                                <td>@item.ServerCode</td>
                                <td>@item.ServerName</td>
                                <td>@item.SerialNumber</td>
                                <td>@item.Location</td>
                                <td> <button type="button" onclick="ServersSend('@item.ServerCode','@item.ServerName','@item.SerialNumber','@item.Location')" class="btn btn-xs btn-primary"><span class="fa fa-edit"></span> </button></td>

                            </tr>

                        }
                    </tbody>
                </table>
            </div>
            <div class="box-footer">

            </div>
        </div>

    </div>
</section>



<div id="modalSube" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header"><h4> Information Update</h4><button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button></div>
            <div class="modal-body">
                <div class="box box-primary">
                    <div class="box-header"></div>

                    <ul class="nav nav-tabs">
                        <li class="active"><a data-toggle="tab" href="#home">Servers Information</a></li>

                    </ul>

                    <div class="tab-content">
                        <div id="home" class="tab-pane fade in active">

                            <div class="form-group">
                                <label>ServerCode:</label>
                                <div class="input-group">
                                    <div class="input-group-addon">
                                        <i class="fa fa-users"></i>
                                    </div>
                                    <input type="text" class="form-control" id="ServerCode" readonly>
                                </div>
                            </div>
                            <div class="form-group">
                                <label>ServerName:</label>
                                <div class="input-group">
                                    <div class="input-group-addon">
                                        <i class="fa fa-users"></i>
                                    </div>
                                    <input type="text" class="form-control" id="ServerName">
                                </div>
                            </div>
                            <div class="form-group">
                                <label>SerialNumber:</label>
                                <div class="input-group">
                                    <div class="input-group-addon">
                                        <i class="fa fa-users"></i>
                                    </div>
                                    <input type="text" class="form-control" id="SerialNumber">
                                </div>
                            </div>

                            <div class="form-group">
                                <label>Location:</label>
                                <div class="input-group">
                                    <div class="input-group-addon">
                                        <i class="fa fa-building"></i>
                                    </div>
                                    <input type="text" class="form-control" id="Location">
                                </div>
                            </div>

                        </div>
                    </div>



                </div>
                <div class="box-footer">
                    <button class="btn btn-primary"><i class="fa fa-pencil"></i>  Güncelle</button>
                    <button class="btn btn-danger"><i class="fa fa-trash"></i>  Arşive Al</button>
                </div>
            </div>
        </div>
    </div>
</div>






