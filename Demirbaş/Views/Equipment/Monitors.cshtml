
@{
    ViewBag.Title = "Monitors";
}
<script type="text/javascript">

    function Save() {
        var _data = {
            Demirbas: $("#txt_Demirbas").val(),
            Brand: $("#txt_Brand").val(),
            Users: $("#txt_Users").val(),
            BrandFeatures: $("#txt_BrandFeatures").val(),
            Place: $("#txt_Place").val(),
            Status: $("#cmb_Status option:selected").val(),
            PurchaseDate: $("#txt_PurchaseDate").val(),
            InvoiceNumber: $("#txtInvoiceNum").val(),
            OldUser: $("#txtoldUser").val()
        };

        $.ajax({
            url: '@Url.Action("MonitorsAdd", "Equipment")',
            type: 'POST',
            dataType: 'json',
            data: _data,
            success: function (response) {
                if (response.Status == true) {
                    swal({
                        title: "",
                        text: response.Message,
                        type: "success",
                        showCancelButton: false,
                        closeOnConfirm: false,
                        showLoaderOnConfirm: true,
                    },
                     function () {
                         location.reload();
                     });

                }
                else
                    swal('', response.Message, "error");

            },
            error: function (hata, ajaxOptions, thrownError) {
                sweetAlert("Oops...", "Something went wrong!", "error");
            }
        });

        Temizle();
    }
    function Temizle() {
        $("#txt_Demirbas").val('');
        $("#txt_Brand").val('');
        $("#txt_Users").val('');
        $("#txt_BrandFeatures").val('');
        $("#txt_Place").val('');
        $("#txtInvoiceNum").val('');
        $("#txtoldUser").val('');
        $("#cmb_Status option:selected").removoAttr('selected');
        $("#txt_PurchaseDate").val('');

        
    }

    function MonitorsSend() {

        $("#mMonitorsUpdate").modal('show');
    }

</script>

<section>
    <div class="box box-primary">
        <div class="box-header">
            <!-- tools box -->
            <div class="pull-right box-tools">
                <button class="btn btn-primary btn-sm pull-right" data-widget='collapse' data-toggle="tooltip" title="Collapse" style="margin-right: 5px;"><i class="fa fa-minus"></i></button>
            </div><!-- /. tools -->
            <i class="fa fa-user"></i>
