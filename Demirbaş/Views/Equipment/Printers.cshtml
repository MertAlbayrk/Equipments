                    <label>NetworkName</label>
                    <input class="form-control" id="txt_NetworkName" type="text">
                </div>
                <div class="col-xs-3">
                    <label>Location</label>
                    <input class="form-control" id="txt_Location" type="text">
                </div>
                <div class="col-xs-3">
                    <label>InventoryNumber</label>
                    <input class="form-control" id="txt_InventoryNumber" type="text">
                </div>
                <div class="col-xs-3">
                    <label>InvoiceContract</label>
