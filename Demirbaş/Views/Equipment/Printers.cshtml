

@{
    ViewBag.Title = "Printers";
}
<script type="text/javascript">

    function Save() {
        var _data = {
            SerialNumber: $("#txt_SerialNumber").val(),
            Brand: $("#txt_Brand").val(),
            IP: $("#txt_IP").val(),
            BasicFeatures: $("#txt_BasicFeatures").val(),
            NetworkName: $("#txt_NetworkName").val(),
            Location: $("#txt_Location").val(),
            InventoryNumber: $("#txt_InventoryNumber").val(),
            InvoiceContract: $("#txt_InvoiceContract").val(),
            Status: $("#cmb_Status option:selected").val(),
            PurchaseDate: $("#txt_PurchaseDate").val()
        };

        $.ajax({
            url: '@Url.Action("PrintersAdd", "Equipment")',
            type: 'POST',
            dataType: 'json',
            data: _data,
            success: function (response) {
                if (response.Status == true) {
                    swal({
                        title: "",
                        text: response.Message,
                        type: "success",
                        showCancelButton: false,
                        closeOnConfirm: false,
                        showLoaderOnConfirm: true,
                    },
                     function () {
                         location.reload();
                     });

                }
                else
                    swal('', response.Message, "error");

            },
            error: function (hata, ajaxOptions, thrownError) {
                sweetAlert("Oops...", "Something went wrong!", "error");
            }
        });

        Temizle();
    }
    function Temizle() {
        $("#txt_SerialNumber").val('');
        $("#txt_Brand").val('');
        $("#txt_IP").val('');
        $("#txt_BasicFeatures").val('');
        $("#txt_Location").val('');
        $("#txt_NetworkName").val('');
        $("#txt_InventoryNumber").val('');
        $("#txt_InvoiceContract").val('');
        $("#cmb_Status option:selected").removoAttr('selected');
        $("#txt_PurchaseDate").val('');


    }

    function PrintersSend(u1,u2,u3,u4,u5,u6,u7,u8,u9,u10,u11) {
        $("#PrintersCode").val(u1);
        $("#Brand").val(u2);
        $("#BasicFeatures").val(u3);
        $("#NetworkName").val(u4);
        $("#Location").val(u5);
        $("#InventoryNumber").val(u6);
        $("#InventroyContract").val(u7);
        $("#Status").val(u8);
        $("#PurchaseDate").val(u9);
        $("#PurchaseDate").val(u10);
        $("#SerialNumber").val(u11);


        $("#modalSube").modal('show');
    }

</script>
