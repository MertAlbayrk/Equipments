
@{
    ViewBag.Title = "Notebooks";
}

<script type="text/javascript">

    function Save() {
        var _data = {
            Users: $("#txt_Users").val(),
            Vendor: $("#txt_Vendor").val(),
            SerialNum: $("#txt_SerialNum").val(),
            WifiMac: $("#txt_WifiMac").val(),
            EthMac: $("#txt_EthMac").val(),
            OperationSystem: $("#cmb_OperationSystem option:selected").text(),
            Specification: $("#txt_Specification").val(),
            WindowsCdKey: $("#txt_WindowsCdKey").val(),
            PCName: $("#txt_PcName").val(),
            SSD: $("#cmb_SSD option:selected").val(),
            SSDSerial: $("#txt_SSDSerial").val(),
            PurchaseDate: $("#txt_PurchaseDate").val(),
            InvoiceNumber: $("#txt_InvoiceNumber").val(),
            Olduser: $("#txt_OldUser").val()
        };

        $.ajax({
            url: '@Url.Action("NotebooksAdd", "Equipment")',
            type: 'POST',
            dataType: 'json',
            data: _data,
            success: function (response) {
                if (response.Status == true) {
                    swal({
                        title: "",
                        text: response.Message,
                        type: "success",
                        showCancelButton: false,
                        closeOnConfirm: false,
                        showLoaderOnConfirm: true,
                    },
                     function () {
                         location.reload();
                     });

                }
                else
                    swal('', response.Message, "error");

            },
            error: function (hata, ajaxOptions, thrownError) {
                sweetAlert("Oops...", "Something went wrong!", "error");
            }
        });

        Temizle();
    }
    function Temizle() {
        $("#txt_Users").val('');
        $("#txt_Vendor").val('');
        $("#txt_SerialNum").val('');
        $("#txt_PcName").val('');
        $("#txt_WifiMac").val('');
        $("#txt_EthMac").val('');
        $("#txt_Specification").val('');
        $("#txt_WindowsCdKey").val('');
        $("#txt_SSDSerial").val('');
        $("#txt_PurchaseDate").val('');
        $("#txt_InvoiceNumber").val('');
        $("#txt_OldUser").val('');
        $("#cmb_OperationSystem option:selected").removoAttr('selected');
        $("#cmb_SSD option:selected").removoAttr('selected');
 
    }

    function NotebookSend(u1,u2,u3,u4,u5,u6,u7,u8,u9,u10,u11,u12,u13,u14,u15) {
        $("#NotebooksCode").val(u1);
        $("#Users").val(u2);
        $("#Vendor").val(u3);
        $("#SerialNumber").val(u4);
        $("#PcName").val(u5);
        $("#WifiMac").val(u6);
        $("#EthMac").val(u7);
        $("#OperationSystem").val(u8);
        $("#Specification").val(u9);
        $("#WindowsCdKey").val(u10);
        $("#SSD").val(u11);
        $("#SSDSerial").val(u12);
        $("#PurchaseDate").val(u13);
        $("#InvoiceNumber").val(u14);
        $("#OldUser").val(u15);

        $("#modalSube").modal('show');
    }

</script>


