
@{
    ViewBag.Title = "Mobile";
}
<script type="text/javascript">

    function Save() {
        var _data = {
            Demirbas: $("#txt_Demirbas").val(),
            Name: $("#txt_Name").val(),
            Phone: $("#txt_Phone").val(),
            Number: $("#txt_Number").val(),
            SerialNumber: $("#txt_SerialNumber").val(),
            IMEI: $("#txt_IMEI").val(),
            MAC: $("#txt_Mac").val(),
            PurchaseDate: $("#txt_PurchaseDate").val(),
            InvoiceNumber: $("#txt_InvoiceNumber").val(),
            OldUser: $("#txt_OldUser").val()


        };

        $.ajax({
            url: '@Url.Action("MobileAdd", "Equipment")',
            type: 'POST',
            dataType: 'json',
            data: _data,
            success: function (response) {
                if (response.Status == true) {
                    swal({
                        title: "",
                        text: response.Message,
                        type: "success",
                        showCancelButton: false,
                        closeOnConfirm: false,
                        showLoaderOnConfirm: true,
                    },
                     function () {
                         location.reload();
                     });

                }
                else
                    swal('', response.Message, "error");

            },
            error: function (hata, ajaxOptions, thrownError) {
                sweetAlert("Oops...", "Something went wrong!", "error");
            }
        });

        Delete();
    }


    function Temizle() {
        $("#txt_Demirbas").val('');
        $("#txt_Name").val('');
        $("#txt_Phone").val('');
        $("#txt_Number").val('');
        $("#txt_SerialNumber").val('');
        $("#txt_IMEI").val('');
        $("#txt_Mac").val('');
        $("#txt_PurchaseDate").val('');
        $("#txt_InvoiceNumber").val('');
        $("#txt_OldUser").val('');
     
    }

    function MobileSend() {

        $("#mMobileUpdate").modal('show');
    }

</script>

