
@{
    ViewBag.Title = "Notebooks";
}


<section>
    <div class="box box-primary">
        <div class="box-header">
            <!-- tools box -->
            <div class="pull-right box-tools">
                <button class="btn btn-primary btn-sm pull-right" data-widget='collapse' data-toggle="tooltip" title="Collapse" style="margin-right: 5px;"><i class="fa fa-minus"></i></button>
            </div><!-- /. tools -->
            <i class="fa fa-user"></i>
            <h3 class="box-title">
                Notebooks Search
            </h3>
        </div>
        <div class="box-body no-padding">
            <div id="world-map" style="height: 5px;"></div>

            <div class="form-group row">
                <div class="col-xs-3">
                    <label>Users</label>
                    <input class="form-control" id="txt_Users" type="text">
                </div>
                <div class="col-xs-3">
                    <label>Vendor</label>
                    <input class="form-control" id="txt_Vendor" type="text">
                </div>
                <div class="col-xs-3">
                    <label>Serial Number</label>
                    <input class="form-control" id="txt_SerialNumber" type="text">
                </div>
                <div class="col-xs-3">
                    <label>PC-Name</label>
                    <input class="form-control" id="txt_PCName" type="text">
                </div>
                <div class="col-xs-3">
                    <label>Wifi Mac</label>
                    <input class="form-control" id="txt_WifiMac" type="text">
                </div>
                <div class="col-xs-3">
                    <label>Eth Mac</label>
                    <input class="form-control" id="txt_Eth Mac" type="text">
                </div>
                <div class="col-xs-3">
                    <label>Operations System</label>
                    <select id="cmb_role" class="form-control">
                        <option value="Selection">Selection</option>
                        <option value="WİN10">WİN10</option>
                        <option value="WİN8">WİN8</option>
                        <option value="WİN7">WİN7</option>

                    </select>
                </div>
                <div class="col-xs-3">
                    <label>Specifications</label>
                    <input class="form-control" id="txt_Specifications" type="text">
                </div>
                <div class="col-xs-3">
                    <label>Windows CD-key</label>
                    <input class="form-control" id="txt_WindowsCDkey" type="text">
                </div>
                <div class="col-xs-3">
                    <label>SSD</label>
                    <select id="cmb_role" class="form-control">
                        <option value="Selection">Selection</option>
                        <option value="Yes">Yes</option>
                        <option value="No  ">No</option>
                    </select>
                </div>
                <div class="col-xs-3">
                    <label>SSD Serial</label>
                    <input class="form-control" id="txt_SSDSerial" type="text">
                </div>
                <div class="col-xs-3">
                    <label>Purchase Date</label>
                    <input class="form-control" id="txt_PurchaseDate" type="date">
                </div>
                <div class="col-xs-3">
                    <label>Invoice Number</label>
                    <input class="form-control" id="txt_InvoiceNumber" type="text">
                </div>
                <div class="col-xs-3">
                    <label>Old User</label>
                    <input class="form-control" id="txt_OldUser" type="text">
                </div>
            </div>


        </div><!-- /.box-body-->
        <div class="box-footer">
            <button class="btn btn-info" onclick="Save()"><i class="fa fa-save"></i>  Bilgileri Kaydet</button>
            <button class="btn btn-warning" onclick="Temizle()"><i class="fa fa-repeat"></i>  Temizle</button>
        </div>
    </div>


</section>
<br />
<section>
    <div class="box box-danger">
        <div class="box-header">
            <div class="box-header">
                <h3 class="box-title"><i class="fa fa-wheelchair"></i><strong>Notebooks Search İnformation</strong></h3>
                <div style="float:right;">
                    <select id="pageSize" class="btn btn-xs btn-default" title="Total User Number" style="float:right;">
                        <option>15</option>
                        <option>25</option>
                        <option>50</option>
                    </select>
                    <div style="clear: both;"></div>
                </div>
            </div>
        </div>
        <div class="box-body no-padding">
            <div id="world-map" style="height: 5px;"></div>
            <div class="box-body table-responsive no-padding" style="overflow-x:scroll;">
                <table class="table table-bordered table-striped table-hover">
                    <thead>
                        <tr>
                            <th>User</th>
                            <th>Vendor</th>
                            <th>Service Tag</th>
                            <th>Serial Number</th>
                            <th>PC-Name</th>
                            <th>Wifi Mac</th>
                            <th>Eth Mac</th>
                            <th>Operations System</th>
                            <th>Specifications</th>
                            <th>Windows CD-key</th>
                            <th>SSD</th>
                            <th>SSD Serial</th>
                            <th>MS Office Cd-Key</th>
                            <th>Invoice No</th>
                            <th>Old User</th>


                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
            <div class="box-footer">

            </div>
        </div>

    </div>
</section>




